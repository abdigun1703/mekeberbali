---
interface Props {
  homePage: boolean;
}

const { homePage } = Astro.props;
---

<div class="justify-end pr-16 flex items-center lg:pr-0">
  
  <div class="ml-5 hidden md:flex">
    <a href="#" class="bg-emerald-400 py-3 px-10 rounded-lg text-white">Hari Libur Nasional</a>
  </div>
  <div class="hidden">
    <a
      href="/signin"
      class={`${homePage ? 'loginBtn py-2 px-[22px] text-base font-medium text-white hover:opacity-70' : 'loginBtn py-2 px-[22px] text-base font-medium text-dark dark:text-white hover:opacity-70'}`}
    >
      Sign In
    </a>
    <a
      href="/signup"
      class={`${homePage ? 'signUpBtn rounded-md bg-slate-100 py-2 px-6 text-base font-medium text-emerald-400 duration-300 ease-in-out hover:bg-opacity-100 hover:text-dark' : 'signUpBtn rounded-md py-2 px-6 text-base font-medium text-white duration-300 ease-in-out hover:bg-blue-500'}`}
    >
      Sign Up
    </a>
  </div>
</div>