---
export interface Props {
  headings: {
    depth: number;
    slug: string; // Ini adalah ID unik yang dibuat Astro
    text: string;
  }[];
}

const { headings } = Astro.props;

// Fungsi untuk membuat indentasi berdasarkan kedalaman judul
function getPaddingLeft(depth: number) {
  // Misalnya, setiap level kedalaman akan memiliki padding 1em
  return `${(depth - 1) * 1}em`;
}
---

<nav class="table-of-contents">
  <h3>Daftar Isi</h3>
  <ul>
    {headings.length > 0 ? (
      headings.map((heading) => (
        <li>
          <a
            href={`#${heading.slug}`}
            style={{ paddingLeft: getPaddingLeft(heading.depth) }}
          >
            {heading.text}
          </a>
        </li>
      ))
    ) : (
      <li>Tidak ada daftar isi tersedia.</li>
    )}
  </ul>
</nav>

<style>
  .table-of-contents {
    border: 1px solid #ccc;
    padding: 1em;
    border-radius: 5px;
    background-color: #f9f9f9;
  }

  .table-of-contents h3 {
    margin-top: 0;
    color: #333;
  }

  .table-of-contents ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .table-of-contents li {
    margin-bottom: 0.5em;
  }

  .table-of-contents a {
    text-decoration: none;
    color: #007bff;
    display: block; /* Agar paddingLeft bekerja dengan baik */
    transition: color 0.2s ease-in-out;
  }

  .table-of-contents a:hover {
    color: #0056b3;
  }
</style>